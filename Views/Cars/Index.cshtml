@{
    ViewBag.Title = "Index";
}



    <div class="container">

        <h2>Cars table</h2>

        <table id="cars" class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Type</th>
                <th>Car Model</th>
                <th>Price per day</th>
                <th>Availability</th>
                <th>Del</th>
            </tr>
            </thead>

            <tbody></tbody>
        </table>

    </div>




@section scripts
    {
        <script>
            $(document).ready(function() {
                $("#cars").DataTable({
                    ajax: {
                        url: "/api/cars",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "Type.Name",

                        },
                        {

                            render: function(data, type, car) {
                                return "<a href='/cars/edit/" + car.Id + "'>" + car.Make + " " + car.Mod + "</a>";
                            }
                        },
                        {
                            data: "Price",
                            render: function(data) {
                                return "<text>" + data + "$</text>";
                            }
                        },
                        {
                            data: "NumberAvailable",

                        },
                        {
                            data: "Id",
                            render: function(data) {
                                return "<button class='js-delete btn btn-danger fas fa-times-circle ' data-car-id=" + data + ">  </button>";
                            }
                        }
                    ]
                });
                $("#cars").on("click",
                    ".js-delete",
                    function() {
                        var button = $(this);
                        bootbox.confirm("Are you sure you want to delete this car?",
                            function(result) {
                                if (result) {
                                    $.ajax({
                                        url: "/api/cars/" + button.attr("data-car-id"),
                                        method: "DELETE",
                                        success: function() {
                                            button.parents("tr").remove();
                                        }
                                    });
                                }
                            });
                    });
            });
        </script>
    }

